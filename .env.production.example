# Production Database Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/taskflow_production

# API Keys (Required)
OPENAI_API_KEY=sk-your-actual-openai-api-key
SECRET_KEY=your-super-secure-32-character-secret-key-here
LANGCHAIN_API_KEY=your-langchain-api-key

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
MAIL_FROM=noreply@yourdomain.com

# Google Cloud Voice Assistant
GOOGLE_CLOUD_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project"}
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Security & Performance
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=TaskFlow-Production
